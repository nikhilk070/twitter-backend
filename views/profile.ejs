<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Miniproject</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <div class="w-full flex justify-end">
      <a href="/logout" class="bg-red-500 rounded-md px-3 py-2 ">Logout</a>
    </div>
    <div class="flexitems-start gap-3">
      <div class="w-10 h-10 bg-red-500 rounded-md overflow-hidden">
        <img class="w-full h-full object-cover" src="/uploads/<%= user.profilepic%>" alt="">
      </div>
    <h3 class="text-3xl mt-4 mb-5"><span class="font-light">Hello</span>, <%= user.name %></h3>
    </div>
    <h5 class="mb-5 mt-3 ">you can create a new post</h5>
    <form action="/post" method="post">
      <textarea name="content" placeholder="What's on your mind ?" class="block p-3 w-1/3 outline-none resize-none bg-transparent border-2 border-zinc-800 rounded-md"></textarea>
      <input type="submit" value="Create New Post" class="block w-40 p-2 m-2 rounded-lg bg-zinc-500 bg-transparent border-2">
    </form>
    <div class="posts mt-20">
      <h3 class="text-zinc-400">Your Posts</h3>
      <div class="postcontainer mt-5">
        <% user.posts.reverse().forEach(function(post){ %>
          <div class="post mb-4 w-1/3 p-4 rounded-md border-[1px] border-zinc-800">
            <h4 class="text-blue-500 mb-1">@<%= user.username %></h4>
            <p class="text-sm tracking-tight"><%= post.content %>
            </p>
            <small class="mt-2 inline-block"><%= post.likes.length %> Likes</small>
            <div class="btns flex mt-5 gap-4">
              <a href="/like/<%= post._id%>" class="text-blue-500">
                <%= post.likes.indexOf(user._id) === -1 ? "Like": "Unlike" %>
              </a>
              <a href="/edit/<%= post._id%>" class="text-zinc-600">edit</a>
            </div>
          </div>
      <% }) %>
        
      </div>
    </div>
  </div>
</body>
</html>
